################################################
#Junta rebels supporting militarised state
################################################
junta_rebels = {
	color = { 120 195 120 }
	area = nation
	government = republic
	defection = none
	independence = none
	gfx_type = culture_owner
	will_relocate = yes

	resilient = no
	reinforcing = yes
	general = yes
	smart = yes
	unit_transfer = no

	artillery = 0.1
	infantry = 0.7
	cavalry = 0.2

	morale = 0.8

	handle_action_negotiate = yes
	handle_action_stability = yes
	handle_action_build_core = yes
	handle_action_send_missionary = yes

	spawn_chance = {
		


		factor = 1
		modifier = {
			factor = 10
			owner = {
				has_disaster = uis_militarism_junta
			}
		}
		modifier = {
			factor = 0
			owner = {
				not = {
					has_estate = estate_academy
				}
			}
		}
		modifier = {
			factor = 1.2
			owner = {
				estate_territory = {
					estate = estate_academy
					territory = 10
					
				}
			}
		}
		modifier = {
			factor = 1.8
			owner = {
				estate_territory = {
					estate = estate_academy
					territory = 20
					
				}
			}
		}
		modifier = {
			factor = 2.0
			owner = {
				estate_territory = {
					estate = estate_academy
					territory = 30
					
				}
			}
		}
		modifier = {
			factor = 2.5
			owner = {
				estate_territory = {
					estate = estate_academy
					territory = 40
					
				}
			}
		}
	}

	movement_evaluation = {
		factor = 1
		modifier = {
			factor = 0.1
			units_in_province = 5
		}
		modifier = {
			factor = 0.001
			controlled_by = REB
		}
		modifier = {
			factor = 5
			is_capital = yes
		}
		modifier = {
			factor = 5
			and = {
				or = {
					has_building = fort_15th
					has_building = fort_16th
					has_building = fort_17th
					has_building = fort_18th
				}
				fort_level = 0
			}
		}
		modifier = {
			factor = 1.1
			unrest = 2
		}
		modifier = {
			factor = 1.3
			unrest = 4
		}
		modifier = {
			factor = 1.5
			unrest = 6
		}
	}
	siege_won_trigger = {
		base_manpower = 5
	}
	siege_won_effect = {
		add_local_autonomy = 10
		add_province_modifier = {
			name = uis_local_men_drafted
			duration = 1826
		}
		owner = {
			if = {
				limit = { has_estate = estate_academy }
				change_estate_land_share = {
					estate = estate_academy
					share = 5.0
					province = root
				}
			}
			else = {
				change_estate_land_share = {
					estate = all
					share = 5.0
					province = root
				}
			}
		}
	}

	can_negotiate_trigger = {
		or = {
			check_variable = {
				junta_progress = 30
			}
			and = {
				has_estate = estate_academy
				and = {
					not = {
						estate_loyalty = {
							estate = estate_academy
							loyalty = 30
						}
					}
					estate_loyalty = {
						estate = estate_academy
						loyalty = 0
					}
				}
				estate_influence = {
					estate = estate_academy
					influence = 60
				}
			}
		}
	}

	can_enforce_trigger = {
		always = yes
	}

	demands_description = "placeholder"

	demands_enforced_effect = {
		hidden_effect = {
			add_country_modifier = {
				name = just_lost_to_rebels
				duration = 10
				hidden = yes
			}
		}
		every_owned_province = {
			limit = {
				has_rebel_faction = REB
			}
			add_local_autonomy = 20
		}
		add_prestige = -40
		change_government = republic
		#placeholder name
		add_government_reform = junta_reform
		if = {
			limit = { has_estate = estate_academy }
			add_estate_influence_modifier = {
				estate = estate_academy
				influence = 30
				#10 years
				duration = 3652
			}
			add_estate_loyalty = {
				estate = estate_special
				loyalty = 30
			}
		}
	}
}